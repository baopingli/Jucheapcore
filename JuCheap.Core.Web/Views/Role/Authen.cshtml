@{
    ViewBag.Title = "角色授权";
    Layout = "~/Views/Shared/_Layout_Content.cshtml";
}

@section styles{
   
    <environment names="Development">
        <link href="~/css/plugins/ztree/metroStyle.css" rel="stylesheet" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/ztree.min.css" asp-append-version="true" />
    </environment>
}

@section scripts{
    <environment names="Development">
        <script src="~/js/plugins/ztree/jquery.ztree.all.js"></script>
        <script src="~/js/json2.js"></script>
        <script src="~/js/page/roleAuthen.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/ztree.min.js" asp-append-version="true"></script>
    </environment>
}

<div class="wrapper wrapper-content">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>角色授权</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <div class="row">
                <div class="col-sm-12">
                    <button id="btnSave" class="btn btn-w-m btn-primary" type="button">保存</button>
                    <button id="btnClear" class="btn btn-w-m btn-danger" type="button">清空</button>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            角色列表
                        </div>
                        <div class="panel-body">
                            <ul id="roleTree" class="ztree"></ul>
                        </div>
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            权限菜单
                        </div>
                        <div class="panel-body">
                            <ul id="menuTree" class="ztree"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
